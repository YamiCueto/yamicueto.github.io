{
  "name": "yamicueto-portfolio",
  "version": "2.0.0",
  "description": "Yamid Cueto - Senior Software Engineer Portfolio",
  "main": "index.html",
  "scripts": {
    "dev": "npm run build:css && npm run serve",
    "build": "npm run build:css && npm run minify",
    "build:css": "postcss src/css/main.css -o css/style.css --watch",
    "build:css:prod": "postcss src/css/main.css -o css/style.css --env production",
    "minify": "npm run minify:css && npm run minify:js",
    "minify:css": "cleancss -o css/style.min.css css/style.css",
    "minify:js": "terser js/script.js -c -m -o js/script.min.js",
    "serve": "live-server --port=3000 --open=/",
    "lint:css": "stylelint src/css/**/*.css --fix",
    "deploy": "npm run build:css:prod && npm run minify",
    "clean": "rimraf css/style.css css/style.min.css js/script.min.js"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "autoprefixer": "^10.4.16",
    "clean-css-cli": "^5.6.3",
    "cssnano": "^6.0.1",
    "live-server": "^1.2.2",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.1",
    "postcss-custom-properties": "^13.3.2",
    "rimraf": "^5.0.5",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "terser": "^5.24.0"
  },
  "keywords": [
    "portfolio",
    "frontend",
    "software-engineer",
    "javascript",
    "css",
    "html"
  ],
  "author": "Yamid Cueto Mazo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YamiCueto/yamicueto.github.io.git"
  },
  "homepage": "https://yamicueto.github.io"
}